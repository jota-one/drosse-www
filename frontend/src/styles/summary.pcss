.summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 2rem;
  font-size: 0.9rem;
  padding-bottom: 4rem;

  @media (--l) {
    flex-direction: row;
  }

  .actions {
    min-width: 40%;
    display: flex;
    justify-content: center;
  }

  p {
    padding: 0;
    font-size: 0.95rem;
  }

  .button {
    margin: 2rem 0;
  }
}
